{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es6",
        "allowUnreachableCode": false,
        "alwaysStrict": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "isolatedModules": true,
        "noImplicitThis": true,
        "noImplicitAny": true,
        "pretty": true,
        "strictPropertyInitialization": true,
        "strictNullChecks": true,
        "strict": true,
        "strictFunctionTypes": true,
        "allowJs": true,
        "lib": [
            "es2015",
            "es2016",
            "es2017",
            "es2018",
            "esnext.asynciterable"
        ],
        "baseUrl": ".",
        "paths": {
            "@typescript/helpers/decorators": [
                "./decorators"
            ],
            "@typescript/helpers/decorators/collections": [
                "./decorators/collections"
            ],
            "@typescript/helpers/decorators/performance": [
                "./decorators/performance"
            ],
            "@typescript/helpers/decorators/common": [
                "./decorators/common"
            ],
            "@typescript/helpers/services": [
                "./services"
            ],
            "@typescript/helpers/services/log":[
                "./services/log"
            ],
            "@typescript/helpers/services/performance":[
                "./services/performance"
            ]
        }
    },
    "exclude": [
        "node_modules"
    ]
}